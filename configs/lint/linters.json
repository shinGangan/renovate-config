{
  "extends": [
    "packages:linters",
    ":automergePatch"
  ],
  "packageRules": [
    {
      "groupName": "Nuxt module package for Linter",
      "groupSlug": "nuxt-linters",
      "matchSourceUrls": [
        "https://github.com/nuxt/eslint"
      ],
      "matchPackageNames": [
        "nuxt-modules/stylelint"
      ]
    },
    {
      "groupSlug": "linters",
      "matchSourceUrls": [
        "https://github.com/markuplint/markuplint"
      ],
      "matchPackageNames": [
        "globals",
        "vue-eslint-parser"
      ],
      "matchPackagePrefixes": [
        "@stylistic/",
        "markdownlint"
      ]
    },
  ]
}
