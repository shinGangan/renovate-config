{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["packages:eslint", "packages:stylelint"],
  "packageRules": [
    {
      "groupName": "Linters",
      "groupSlug": "linters",
      "matchPackageNames": ["globals"],
      "matchPackagePrefixes": ["@eslint/", "prettier"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"]
    }
  ]
}
